# AWS Configuration
AWS_REGION=us-east-1

# Project Configuration
PROJECT_NAME=seva-arogya
ENV_NAME=dev

# Feature Toggles
ENABLE_CLOUDFRONT=true
ENABLE_HTTPS=false

# Container Configuration
# Format: <account-id>.dkr.ecr.<region>.amazonaws.com/<repository-name>:tag
CONTAINER_IMAGE=123456789012.dkr.ecr.us-east-1.amazonaws.com/seva-arogya-dev-backend:latest

# Database Configuration
DB_NAME=sevaarogya
DB_USERNAME=sevaadmin
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_MIN_8_CHARS

# Application Secrets
# Generate secure random strings for these values
FLASK_SECRET_KEY=CHANGE_ME_FLASK_SECRET_KEY_32_CHARS_MIN
JWT_SECRET=CHANGE_ME_JWT_SECRET_32_CHARS_MIN

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Optional: ACM Certificate ARN (only needed if ENABLE_HTTPS=true)
# CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/abc123

# Frontend Build Path (for local reference, not used by Terraform)
FRONTEND_BUILD_PATH=../seva-arogya-frontend/build

# ============================================================================
# TERRAFORM OUTPUTS (These will be provided after terraform apply)
# ============================================================================
# Copy these values from terraform output and add to your application .env
#
# DB_HOST=<from terraform output: rds_endpoint>
# DB_PORT=5432
# COGNITO_USER_POOL_ID=<from terraform output: cognito_user_pool_id>
# COGNITO_CLIENT_ID=<from terraform output: cognito_client_id>
# S3_PDF_BUCKET=<from terraform output: pdf_bucket_name>
# API_BASE_URL=<from terraform output: api_base_url>
# CLOUDFRONT_DOMAIN=<from terraform output: cloudfront_domain_name>
